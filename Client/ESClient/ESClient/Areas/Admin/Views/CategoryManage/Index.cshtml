
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div ng-app="myapp" class=" row" >
    <div class="col-lg-12" ng-categorycontroller="StudentController">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh mục sản phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <span>
                            @Html.ActionLink("Thêm danh mục mới", "Create")
                        </span>
                        <button class="btn btn-success">
                            <span class="glyphicon glyphicon-user"></span>  Add User
                        </button>
                        <thead>
                            <tr>
                                <th>Mã danh mục</th>
                                <th>Tên danh mục</th>
                                <th>{{$scope}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="categories in contacts">
                                <td>sdfs</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




