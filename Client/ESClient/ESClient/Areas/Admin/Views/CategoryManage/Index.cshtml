
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/controllers/Category.js"></script>
<div ng-app="myapp" class=" row" ng-controller="CategoryManage">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh mục sản phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <span>
                            @Html.ActionLink("Thêm danh mục mới", "Create")
                        </span>
                       
                        <thead>
                            <tr>
                                <th>Tên danh mục</th>
                                <th>Đã xóa</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="cata in abc">
                                <td>{{cata.TEN}}</td>
                                <td>{{cata.DAXOA}}</td>
                                <td>
                                    @{
                                    var url = Url.Action("Edit", "CategoryManage", new { id = "{{cata.MA}}" });
                                    url = HttpUtility.UrlDecode(url);
                                    }
                                    <a data-ng-href="@url">Sửa</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




