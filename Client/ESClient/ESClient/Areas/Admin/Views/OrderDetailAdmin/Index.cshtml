@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/controllers/OrderDetail.js"></script>
<div ng-app="myapp" class="row" ng-controller="OrderDetailManage">
    <div class="col-lg-12">
        <div class="panel panel-default " style="font-size: 10pt;">
            <div class="panel-heading">
                DANH SÁCH ĐƠN HÀNG CHI TIẾT
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <span>
                            @Html.ActionLink("Thêm chi tiết đơn hàng mới", "Create")
                        </span>
                        <thead>
                            <tr>
                                <th>Đơn hàng</th>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                                <th>Đã xóa</th>
                                <td>Chức năng</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in orders">
                                <td>{{item.DONHANG}}</td>
                                <td>{{item.SANPHAM}}</td>
                                <td>{{item.SOLUONG}}</td>
                                <td>{{item.THANHTIEN}}</td>
                                <td>{{item.DAXOA}}</td>

                                <td>
                                    @{
                                        var url = Url.Action("Edit", "OrderDetailAdmin", new { id = "{{item.DONHANG}}" });
                                        url = HttpUtility.UrlDecode(url);
                                    }
                                    <a data-ng-href="@url">Sửa</a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
>

