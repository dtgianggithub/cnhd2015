
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<script src="~/Scripts/controllers/OrderDetail.js"></script>

<div ng-app="myapp" class="row" ng-controller="AddrderDetail">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chi tiết đơn hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="form-horizontal">
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    <label class="control-label col-md-2">Đơn hàng</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="DonHang" placeholder="Đơn hàng" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Sản phẩm</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="SanPham" placeholder="Sản phẩm" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Số lượng</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="SoLuong" placeholder="Số lượng" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Thành tiền</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="Tien" placeholder="Thành tiền" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" ng-click="TaoMoi(DonHang,SanPham,SoLuong,Tien)" value="Thêm mới" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }

                    </table>
                    <div>
                        @Html.ActionLink("Trở về danh mục chính", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
