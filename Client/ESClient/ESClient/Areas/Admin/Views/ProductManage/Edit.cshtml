@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/Scripts/controllers/Product.js"></script>
<div ng-app="myapp" class="row" ng-controller="EditProduct">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                SẢN PHẨM
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body" >
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="form-horizontal" ng-init="init(@ViewBag.Ma)">
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    <label class="control-label col-md-2">Mã sản phẩm</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="Ma" placeholder="Mã sản phẩm" class="form-control">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-2">Tên sản phẩm</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="Ten" placeholder="Tên sản phẩm" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Giá bán</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="Gia" placeholder="Giá bán" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Hình ảnh</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="Hinh" placeholder="Hình ảnh" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Mô tả</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="MoTa" placeholder="Mô tả" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Số lượng</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="SoLuong" placeholder="Số lượng" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                        <label class="control-label col-md-2">Loại sản phẩm</label>
                                        <div class="col-md-10">
                                            <select name="LSP" id="LSP" ng-options="c.TEN for c in typeproduct" ng-model="LSP" class="form-control"></select>
                                           
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-2">Nhà sản xuất</label>
                                        <div class="col-md-10">
                                            <select name="LSP" id="LSP" ng-model="NSX" class="form-control">
                                                <option ng-repeat="option in typemaufactory" value="{{option.MA}}">{{option.TEN}}</option>
                                            </select>
                                           
                                        </div>
                                    </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Mã khuyến mãi</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="KhuyenMai" placeholder="Mã khuyến mãi" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Sản phẩm bán chạy</label>
                                    <div class="col-md-10">
                                        <input type="checkbox" ng-model="banchay" ng-true-value="true" ng-false-value="false" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Sản phẩm mới</label>
                                    <div class="col-md-10">
                                        <input type="checkbox" ng-model="Moi" ng-true-value="true" ng-false-value="false" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Xóa</label>
                                    <div class="col-md-10">
                                        <input type="checkbox" ng-model="xoa" ng-true-value="true" ng-false-value="false"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" ng-click="capnhat(Ma,Ten,Gia,Hinh,MoTa,SoLuong,LSP,NSX,KhuyenMai,banchay,Moi,xoa)" value="Cập nhật" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }

                    </table>
                    <div>
                        @Html.ActionLink("Trở về danh mục chính", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





