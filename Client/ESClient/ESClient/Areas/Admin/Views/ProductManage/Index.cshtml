
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/controllers/Product.js"></script>

<div ng-app="myapp" class="row" ng-controller="ProductManage">
    <div class="col-lg-12">
        <div class="panel panel-default " style="font-size: 10pt;">
            <div class="panel-heading">
                DANH SÁCH SẢN PHẨM
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <span>
                            @Html.ActionLink("Thêm sản phẩm mới", "Create")
                        </span>
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên</th>
                                <th>Đơn Giá Bán</th>
                                <th>Hình Ảnh</th>
                                <th>Mô Tả</th>
                                <th>Số Lượng</th>
                                <th>Loại Sản Phẩm</th>
                                <th>Sản Phẩm Mới</th>
                                <th>Nhà Sản Xuất</th>
                                <th>Sản Phẩm Bán Chạy</th>
                                <th>Mã Khuyến Mãi</th>
                                <th>Đã xóa</th>
                                <td>Chức năng</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in products">
                                <td>{{item.MA}}</td>
                                <td>{{item.TEN}}</td>
                                <td>{{item.DONGIABAN}}</td>
                                <td>{{item.HINHANH}}</td>
                                <td>{{item.MOTA}}</td>
                                <td>{{item.SOLUONG}}</td>
                                <td>{{item.TENLOAISANPHAM}}</td>
                                <td>{{item.SANPHAMMOI}}</td>
                                <td>{{item.TENNHASANXUAT}}</td>
                                <td>{{item.SANPHAMBANCHAY}}</td>
                                <td>{{item.MAKHUYENMAI}}</td>
                                <td>{{item.DAXOA}}</td>
                                
                                <td>
                                    @{
                                        var url = Url.Action("Edit", "ProductManage", new { id = "{{item.MA}}" });
                                        url = HttpUtility.UrlDecode(url);
                                    }
                                    <a data-ng-href="@url">Sửa</a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>








