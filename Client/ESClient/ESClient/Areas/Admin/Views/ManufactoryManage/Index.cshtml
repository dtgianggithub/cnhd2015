
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div ng-app="myapp" class="row" ng-controller="ManufactoryManage">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                NHÀ  SẢN XUẤT
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <span>
                            @Html.ActionLink("Thêm nhà sản xuất mới", "Create")
                        </span>
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Xóa</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="manu in manus">
                                <td>{{manu.TEN}}</td>
                                <td>{{manu.DAXOA}}</td>
                                <td>
                                    @{
                                        var url = Url.Action("Edit", "ManufactoryManage", new { id = "{{manu.MA}}" });
                                        url = HttpUtility.UrlDecode(url);
                                    }
                                    <a data-ng-href="@url">Sửa</a>
                                 </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






