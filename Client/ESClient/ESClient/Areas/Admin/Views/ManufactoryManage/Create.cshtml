
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>@ViewBag.Info</h2>
<div ng-app="myapp" class="row" ng-controller="CreateManufactory">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            SỬA LINK API
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body" ng-init="init(@ViewBag.Ma)">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="text" ng-model="Ten" placeholder=" Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" ng-click="Tao(Ten)" value="Tạo mới" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                        <div>
                            @Html.ActionLink("Trở về danh mục chính", "Index")
                        </div>
                    }
            </div>
        </div>
    </div>
</div>
</div>


