
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/controllers/Order.js"></script>
<div ng-app="myapp" class="row" ng-controller="OrderManage">
    <div class="col-lg-12">
        <div class="panel panel-default " style="font-size: 10pt;">
            <div class="panel-heading">
                DANH SÁCH ĐƠN HÀNG
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <span>
                            @Html.ActionLink("Thêm đơn hàng mới", "Create")
                        </span>
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tổng tiền</th>
                                <th>Ngày đặt hàng</th>
                                <th>Ngày nhận hàng</th>
                                <th>Tên người nhận</th>
                                <th>Địa chỉ người nhận</th>
                                <th>Điện thoại người nhận</th>
                                <th>Trạng thái</th>
                                <th>Đã xóa</th>
                                <td>Chức năng</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in orders">
                                <td>{{item.MA}}</td>
                                <td>{{item.TONGTIEN}}</td>
                                <td>{{item.NGAYDATHANG}}</td>
                                <td>{{item.NGAYNHANHANG}}</td>
                                <td>{{item.TENNGUOINHAN}}</td>
                                <td>{{item.DIACHINHAN}}</td>
                                <td>{{item.DIENTHOAINGUOINHAN}}</td>
                                <td>{{item.TRANGTHAI}}</td>
                                <td>{{item.DAXOA}}</td>

                                <td>
                                    @{
                                        var url = Url.Action("Edit", "OrderAdmin", new { id = "{{item.MA}}" });
                                        url = HttpUtility.UrlDecode(url);
                                    }
                                    <a data-ng-href="@url">Sửa</a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
>

