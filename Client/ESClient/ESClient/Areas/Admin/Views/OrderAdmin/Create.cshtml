
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/Scripts/controllers/Order.js"></script>

<div ng-app="myapp" class="row" ng-controller="CreateOrder">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                ĐƠN HÀNG
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="form-horizontal">
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    <label class="control-label col-md-2">Mã đơn hàng</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="Ma" placeholder="Mã đơn hàng" class="form-control">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-2">Tổng tiền</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="Tien" placeholder="Tên sản phẩm" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Ngày đặt hàng</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="NgayDat" placeholder="Ngày đặt hàng" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Ngày nhận hàng</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="NgayNhan" placeholder="Ngày nhận hàng" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Tên người nhận</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="Ten" placeholder="Tên người nhận" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Địa chỉ người nhận</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="DiaChi" placeholder="Địa chỉ người nhận" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Điện thoại người nhận</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="DienThoai" placeholder="Điện thoại người nhận" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Trạng thái</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="TrangThai" placeholder="Trạng thái" class="form-control">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" ng-click="TaoMoi(Ma,Tien,NgayDat,NgayNhan,Ten,DiaChi,DienThoai,TrangThai)" value="Thêm mới" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }

                    </table>
                    <div>
                        @Html.ActionLink("Trở về danh mục chính", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


