
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/controllers/Promotion.js"></script>

<div ng-app="myapp" class="row" ng-controller="EditPromotion">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chi tiết khuyến mãi
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body" ng-init="init(@ViewBag.Ma)">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="form-horizontal">
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                <div class="form-group">
                                    <label class="control-label col-md-2">Ngày bắt đầu</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="NgayBatDau" placeholder="Ngày bắt đầu" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Ngày kết thúc</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="NgayKetThuc" placeholder="Ngày kết thúc" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Nội dung</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="NoiDung" placeholder="Nội dung" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Xóa</label>
                                    <div class="col-md-10">
                                        <input type="checkbox" ng-model="xoa" ng-true-value="true" ng-false-value="false" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" ng-click="capnhat(NgayBatDau,NgayKetThuc,NoiDung,xoa)" value="Cập nhật" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }

                    </table>
                    <div>
                        @Html.ActionLink("Trở về danh mục chính", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

