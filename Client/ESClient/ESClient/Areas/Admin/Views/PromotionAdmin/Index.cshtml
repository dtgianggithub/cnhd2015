@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/controllers/Promotion.js"></script>
<div ng-app="myapp" class="row" ng-controller="PromotionManage">
    <div class="col-lg-12">
        <div class="panel panel-default " style="font-size: 10pt;">
            <div class="panel-heading">
                DANH SÁCH KHUYẾN MÃI
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <span>
                            @Html.ActionLink("Thêm khuyến mãi mới", "Create")
                        </span>
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Ngày bắt đầu</th>
                                <th>Ngày kết thúc</th>
                                <th>Nội dung</th>
                                <th>Đã xóa</th>
                                <td>Chức năng</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in promotions">
                                <td>{{item.MA}}</td>
                                <td>{{item.NGAYBATDAU}}</td>
                                <td>{{item.NGAYKETTHUC}}</td>
                                <td>{{item.NOIDUNG}}</td>
                                <td>{{item.DAXOA}}</td>

                                <td>
                                    @{
                                        var url = Url.Action("Edit", "PromotionAdmin", new { id = "{{item.MA}}" });
                                        url = HttpUtility.UrlDecode(url);
                                    }
                                    <a data-ng-href="@url">Sửa</a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
>

